/* components/navigation.wxss */

@import "/style/icon.wxss";

.header {
  display: flex;
  align-items: center;
  top: 0;
  position: fixed;
  width: 100%;
  z-index: 99999;
  box-shadow: 0 1px 5px #888888;
}

.header .title-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 138rpx;
  height: 56rpx;
  border: 1rpx solid #F1F1F1;
  border-radius: 32rpx;
  margin-left: 14rpx;
  padding: 0 14rpx;
  position: relative;
  top:-3px;
}

.header .back, .header .home {
  height: 32rpx;
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .line {
  border-left: 1rpx solid #D7D7D7;
  height: 36rpx;
}

.header .header-title {
  width:340rpx;
  position: absolute;
  left: 50%;
  font-size: 32rpx;
  transform: translateX(-50%);
  height:57rpx;
  line-height:37rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: center;
}
