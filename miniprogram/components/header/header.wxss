.header {
    height: 44px;
    line-height: 44px;
    font-size: 34rpx;
    color: #3C464F;
    font-weight: bold;
    text-align: center;
    box-sizing: content-box;
    position: relative;
}

.navigation {
    position: absolute;
    left: 15rpx;
    bottom: 8px;
    border: 1px solid #EBEBEB;
    border-radius: 28px;
    height: 28px;
    color: #EBEBEB;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 100;
    line-height: 0;
    background: white;
}

.header .navigation .text {
    display: inline;
    margin: 0;
    flex: none;
    font-size: 16px;
}

.header .navigation .image {
    height: 16px;
    width: 16px;
}

.header .nav {
    height: 16px;
    width: 38px;
}

.fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: -100;
}

.header .title {
    display: inline-block;
    max-width: 390rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

@media screen and (min-width:600px) {
    .header {
        font-size: 20px;
    }
}