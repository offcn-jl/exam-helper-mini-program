/* 底部广告区域 */
.advertising {
    position: relative;
}

.advertising::after {
    content: "广告";
    z-index: 100;
    position: absolute;
    top: 0;
    right: 0;
    text-shadow:
        -.025em -.025em 0 #444,
        .025em -.025em 0 #444,
        -.025em .025em 0 #444,
        .025em .025em 0 #444;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.2);
    padding: 0 8rpx 0 10rpx;
    border-radius: 0 0 0 10rpx;
}

/* 弹出框 */
.tabbar {
    width: 750rpx;
    position: absolute;
    bottom: 0;
}

.tabbar-bg {
    position: fixed;
    top: 0;
    width: 750rpx;
    bottom: 0;
    z-index: 99;
    background: rgba(0, 0, 0, 0.5);
    transform: translateX(-100%);
    transition: all 0s ease 0.3s;
    z-index: 9999999;
}

.tabbar-bg.show {
    transition: all 0s ease 0s;
    transform: translateX(0);
}

.tabbar {
    overflow: hidden;
    border-radius: 20rpx 20rpx 0 0;
    background: #f7f7f7;
    transition: all 0.3s ease 0s;
    transform: translateY(100%);
}

.tabbar-bg.show .tabbar {
    transform: translateY(0);
}

.tabbar view {
    background: #ffffff;
    font-size: 32rpx;
    text-align: center;
    height: 122rpx;
    line-height: 122rpx;
}

.tabbar view button {
    background: none;
    height: 122rpx;
    line-height: 122rpx;
}

.tabbar view.line {
    height: 1px;
    background: #f7f7f7;
}

.tabbar view.cancel {
    border: 0;
    margin-top: 20rpx;
    padding-bottom: 35rpx;
}

