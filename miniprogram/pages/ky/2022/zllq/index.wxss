/* pages/ky/2022/zllq/index.wxss */

page {
    background: #ff9b05;
}

.scroll-container {
    white-space: nowrap;
    margin: 50rpx 0;
}

.scroll-item {
    display: inline-block;
    border: 1px solid white;
    border-radius: 10px;
    height: 80rpx;
    line-height: 77rpx;
    padding: 0 25rpx;
    color: white;
    margin: 0 10rpx;
}

.scroll-item.active {
    color: #ff9b05;
    background: white;
    font-size: 120%;
}

.book {
    background: white;
    width: 95vw;
    height: 130rpx;
    margin: 20rpx auto;
    border-radius: 5px;
    padding: 10rpx;
}

.book image {
    width: 10vw;
    float: left;
    margin-right: 5rpx;
}

.book .title {
    width: 60vw;
    float: left;
    /* height: 100rpx; */
    margin-top: 15rpx;

    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.book .view {
    width: 20vw;
    float: right;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #ff9b05;
    border-radius: 20rpx;
    margin-top: 15rpx;
}
