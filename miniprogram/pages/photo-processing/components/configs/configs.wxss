@-webkit-keyframes ani {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(calc(-100% + 110rpx));
    }
}

@keyframes ani {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(calc(-100% + 110rpx));
    }
}

