/* pages/photo-processing/configs/index.wxss */
page {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    height: 100vh;
}

.bg {
    position: fixed;
    top: 0;
    width: 100%;
    height: 370rpx;
    z-index: -1;
}

.header {
    height: 44px;
    width: 100%;
    flex: none;
    padding: 0 24rpx;
    font-size: 34rpx;
    font-weight: bold;
    color: white;
    text-align: center;
    position: relative;
    line-height: 44px;
}

.header navigator {
    position: absolute;
    top: calc(22px - 30rpx);
}

.header .arrow {
    height: 60rpx;
    width: 60rpx;
}

.search {
    height: 88rpx;
    width: 670rpx;
    margin: 30rpx auto 50rpx auto;
    background: white;
    border-radius: 8rpx;
    flex: none;
}

.search image {
    height: 40rpx;
    width: 40rpx;
    margin-top: 24rpx;
    margin-left: 40rpx;
    vertical-align: top;
}

.search input {
    display: inline-block;
    width: 580rpx;
    height: 88rpx;
    line-height: 40rpx;
    padding: 24rpx 30rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #3C464F;
}

.placeholder {
    font-size: 28rpx;
    color: #A6AAB9;
}

.content {
    height: 100%;
    background: white;
    border-radius: 24rpx 24rpx 0 0;
    overflow: hidden;
    position: relative;
}

.search-results {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: white;
    z-index: 10;
    border-radius: 24rpx 24rpx 0 0;
}

.empty {
    margin-top: 170rpx;
    font-size: 0;
    text-align: center;
}

.empty image {
    width: 290rpx;
    height: 244rpx;
    margin-bottom: 10rpx;
}

.empty view {
    font-size: 32rpx;
    color: #91979C;
}

.empty text {
    font-size: 26rpx;
    color: #CCCCCC;
    line-height: 40rpx;
}