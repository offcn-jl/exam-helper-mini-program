.doc-title {
  color: white;
  text-align: center;
  margin: 1vh 0;
}

.doc {
  margin: 1.5vh 0 0 2.5vw;
  display: inline-block;
}

.doc-image {
  width: 30vw;
  border-radius: 5px;
  border: 1px solid black;
}

.doc-name {
  color: white;
  width: 30vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


/* 联系信息 */
.shareWap {
  width: 95vw;
  padding: 25rpx 0;
  z-index: 99999999999;
  margin: 0 auto;
  height: 130rpx;
  background: #fff;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: nowrap;
  border-radius: 10rpx;
  overflow: hidden;
  /* box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1); */
  animation:box-shadow-color 10s infinite;
  margin-bottom: 30rpx;
}

@keyframes box-shadow-color {
  0% {box-shadow: 0px 0px 12rpx #e74c3c; }
  20%{box-shadow: 0px 0px 12rpx #f1c40f;}
  40%{box-shadow: 0px 0px 12rpx #1abc9c;}
  60%{box-shadow: 0px 0px 12rpx #3498db;}
  80%{box-shadow: 0px 0px 12rpx #9b59b6;}
  100%{box-shadow: 0px 0px 12rpx #e74c3c;}
}

