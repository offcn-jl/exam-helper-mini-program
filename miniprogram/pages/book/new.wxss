.cell {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
}

.cell--wrapper {
  width: 100% !important;
  height: 100% !important;
  text-align: center;
  position: relative;
}

.cell--bubble {
  top: 0;
  left: 0;
  z-index: 999;
  position: absolute;
  width: 100% !important;
  height: 100% !important;
  background-color: transparent !important;
  line-height: 64rpx !important;
  background: url(https://news01.offcn.com/jl/2021/1116/20211116052824115.png) top center no-repeat;
  background-size: 48rpx;
}

.cell--light_without_border {
  display: none;
  width: 30rpx !important;
  height: 30rpx !important;
}

.cell--messagecard {
  width: 100% !important;
}

.suffix {
  font-size: 90%;
}

.no-button::after {
  border: none;
}

.no-button {
  margin: 0;
  background-color: transparent;
  padding-left: 0;
  padding-right: 0;
  line-height:inherit;
