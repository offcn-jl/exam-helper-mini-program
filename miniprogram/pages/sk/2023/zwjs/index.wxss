}

/* 新增input */
.list{
  width: 578rpx;
  margin: 30rpx auto;
  overflow: hidden;
}
.list view{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  float: left;
  background: #d2c9bc;
  color: #fff;
  text-align: center;
  margin: 0 18rpx;
}
.list view.on{background: #dfac5f;}
@import "/style/icon.wxss";
.new_tit{
  width: 100%;
  height: 100%;
  border: 1px solid #f5f3f3;
  background: #f5f3f3;
  border-radius: 14rpx;
  line-height: 90rpx;
}
.new_tit input{
  float: left;
  margin-left: 15rpx;
  line-height: 38rpx;
  height: 90rpx;
}
.new_tit .icon_title {
  display: inblock;
  font-size: 40rpx;
  padding-left: 20rpx;
  color: #999;
  font-weight: bold;
  float: left;
}