/**app.wxss**/
.suffix {
  margin: .5vh auto;
  color: gainsboro;
  text-align: center;
  font-size: 86%;
}

.w100 {
  width: 100vw;
}

.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10;
}

view,
text,
scroll-view,
navigator {
  box-sizing: border-box;
}

::-webkit-scrollbar {
  display: none;
}

button.btn {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
}

button.btn:after {
  display: none;
}
