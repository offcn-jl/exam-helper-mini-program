/**app.wxss**/

/* 推广后缀 */
.suffix {
    width: 95vw;
    margin: 2vh auto;
    color: gainsboro;
    text-align: center;
    font-size: 90%;
    word-wrap: break-word;
}

/* 遮罩 */
.modal {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 10;
}

view,
text,
scroll-view,
navigator {
    box-sizing: border-box;
}

::-webkit-scrollbar {
    display: none;
}

button.btn {
    padding: 0;
    margin: 0;
    background: transparent;
    border: none;
}

button.btn:after {
    display: none;
}

.button-custom {
    padding: 0;
    border-radius: 0;
    background: none;
}

.w100 {
    display: block;
    width: 100vw !important;
}
